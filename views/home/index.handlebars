<div class="row">
    <div class="col-md-8">
        {{#each posts}}
        <div class="panel">
            <div class="card">
                <div class="card-img">
                    <img src="/uploads/{{file}}" alt="{{title}}" class="img-responsive">
                </div>
                <div class="card-body">
                    <div class="card-title">{{ title }}</div>
                    <div class="card-text">{{ body }}</div>
                </div>
                <div class="card-footer text-muted">
                    <p>
                        Created at {{ formatDate date 'MM-DD-YYYY'}}
                    </p>
                    <a href="/post/{{_id}}" class="btn btn-primary">Read me&nbsp;&rarr;</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="col-md-4">
        <div class="panel">
            <div class="panel-title">Category List</div>
            <div class="panel-body">
                <ul class="list-unstyled">
                    {{#each categories}}
                        <li class="list-item">
                            <a href="javascript:void(0);">{{ name }}</a>
                        </li>
                    {{/each}}
                </ul>  
            </div>
        </div>
    </div>
</div>