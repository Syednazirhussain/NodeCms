<h1 class="heading">Create Posts</h1>

{{#each errors}}
    <div class="alert alert-danger">
        {{message}}
    </div>
{{/each}}

<form action="/admin/posts/store" method="POST" enctype="multipart/form-data">

    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control">
    </div>

    <div class="form-group">
        <label for="status">Category</label>
        <select name="category" class="form-control">
            {{#if categories}}
                {{#each categories}}
                    <option value="{{id}}">{{ this }}</option>
                {{/each}}
            {{/if}}
        </select>
    </div>

    <div class="form-group">
        <label for="file" class="control-label">Image</label>
        <input type="file" name="file" class="form-control">
    </div>

    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>

    <div class="form-group">
        <label for="allowComments">
            <input type="checkbox" name="allowComments" id="allowComments">
            Allow Comments
        </label>
    </div>

    <div class="form-group">
        <label for="body">Description</label>
        <textarea name="body" id="body" cols="30" rows="10" style="resize: none" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary" class="form-control">Create</button>
</form> 