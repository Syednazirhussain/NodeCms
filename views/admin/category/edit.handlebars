<div class="container">
    <div class="row">
        <div class="panel">
            <div class="panel-title">Edit Category</div>
            <div class="panel-body">
                <form action="/admin/categories/update/{{category._id}}?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" value="{{#if category}} {{category.name}}  {{/if}}" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>                    
                </form>
            </div>
        </div>
    </div>
</div>